<UserControl
    x:Class="Chess.Admin.Views.AddPageView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:Chess.Admin.ViewModels;assembly=Chess.Admin"
	xmlns:conv="clr-namespace:Chess.Admin.Converter;assembly=Chess.Admin"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Design.DataContext>
        <vm:AddPageViewModel />
    </Design.DataContext>

    <UserControl.Resources>
        <SolidColorBrush x:Key="ItemForeground">Black</SolidColorBrush>
    </UserControl.Resources>

    <UserControl.Styles>
        <Style Selector="TextBlock.Header">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="FontWeight" Value="DemiBold" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Bottom" />
        </Style>

        <Style Selector="TextBlock.Message">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="FontWeight" Value="DemiBold" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

		<Style Selector="TextBox">
			<Setter Property="BorderBrush" Value="Black" />
		</Style>

        <Style Selector="ComboBox.Combo">
			<Setter Property="Height" Value="30"/>
			<Setter Property="BorderBrush" Value="Black" />
            <Setter Property="HorizontalAlignment" Value="Center" />
			<Setter Property="Padding" Value="5"/>
        </Style>

        <Style Selector="ComboBoxItem">
            <Setter Property="Foreground" Value="{DynamicResource ItemForeground}" />
        </Style>

        <Style Selector="Button">
            <Setter Property="Width" Value="100" />
            <Setter Property="Height" Value="30" />
            <Setter Property="Margin" Value="0 10" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="FontWeight" Value="DemiBold" />
            <Setter Property="Foreground" Value="Black" />
			<Setter Property="Background" Value="#e3e3e3"/>
			<Setter Property="BorderBrush" Value="Black"/>
        </Style>
    </UserControl.Styles>

    <Grid
        Margin="10"
        ColumnDefinitions="* 70 70 70 70 70"
        RowDefinitions="50 30 30 30 20 30 30 30 30 30">

        <!--  Add Block  -->
        <TextBlock
            Grid.Row="0"
            Grid.ColumnSpan="6"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="16"
            FontWeight="Bold"
            Text="Добавить FEN в базу" />

        <TextBlock
            Grid.Row="1"
            Grid.Column="0"
            Classes="Header"
            Text="FEN" />
        <TextBlock
            Grid.Row="1"
            Grid.Column="1"
            Classes="Header"
            Text="Стратегия" />
        <TextBlock
            Grid.Row="1"
            Grid.Column="2"
            Classes="Header"
            Text="Тактика" />
        <TextBlock
            Grid.Row="1"
            Grid.Column="3"
            Classes="Header"
            Text="Счет" />
        <TextBlock
            Grid.Row="1"
            Grid.Column="4"
            Classes="Header"
            Text="Техника" />
        <TextBlock
            Grid.Row="1"
            Grid.Column="5"
            Classes="Header"
            Text="Оценка" />
        <TextBox Margin="0 0 5 0"
            Grid.Row="2"
            Grid.Column="0"
			Text="{Binding Fen}"
            Watermark="Введи FEN" />
        <ComboBox
			Classes="Combo"
            Grid.Row="2"
            Grid.Column="1" 
            SelectedIndex="{Binding Strategy}">
            <ComboBox.Items>1</ComboBox.Items>
            <ComboBox.Items>2</ComboBox.Items>
            <ComboBox.Items>3</ComboBox.Items>
            <ComboBox.Items>4</ComboBox.Items>
            <ComboBox.Items>5</ComboBox.Items>
        </ComboBox>
		<ComboBox
			Classes="Combo"
            Grid.Row="2"
            Grid.Column="2"
            SelectedIndex="{Binding Tactics}">
            <ComboBox.Items>1</ComboBox.Items>
            <ComboBox.Items>2</ComboBox.Items>
            <ComboBox.Items>3</ComboBox.Items>
            <ComboBox.Items>4</ComboBox.Items>
            <ComboBox.Items>5</ComboBox.Items>
        </ComboBox>
		<ComboBox
			Classes="Combo"
            Grid.Row="2"
            Grid.Column="3"
            SelectedIndex="{Binding Score}">
            <ComboBox.Items>1</ComboBox.Items>
            <ComboBox.Items>2</ComboBox.Items>
            <ComboBox.Items>3</ComboBox.Items>
            <ComboBox.Items>4</ComboBox.Items>
            <ComboBox.Items>5</ComboBox.Items>
        </ComboBox>
		<ComboBox
			Classes="Combo"
            Grid.Row="2"
            Grid.Column="4"
            SelectedIndex="{Binding Techique}">
            <ComboBox.Items>1</ComboBox.Items>
            <ComboBox.Items>2</ComboBox.Items>
            <ComboBox.Items>3</ComboBox.Items>
            <ComboBox.Items>4</ComboBox.Items>
            <ComboBox.Items>5</ComboBox.Items>
        </ComboBox>
		<ComboBox
			Classes="Combo"
            Grid.Row="2"
            Grid.Column="5"
            SelectedIndex="{Binding Grade}">
            <ComboBox.Items>1</ComboBox.Items>
            <ComboBox.Items>2</ComboBox.Items>
            <ComboBox.Items>3</ComboBox.Items>
            <ComboBox.Items>4</ComboBox.Items>
            <ComboBox.Items>5</ComboBox.Items>
        </ComboBox>

		<StackPanel Orientation="Horizontal"
            Grid.Row="3"
            Grid.Column="0">
            <Button Command="{Binding Add}" Content="Добавить" />
			<Button Command="{Binding ClearAdd}" Margin="10" Content="Очистить"/>
			
		</StackPanel>

        <TextBlock
            Grid.Row="3"
            Grid.Column="1"
            Grid.ColumnSpan="5"
            Classes="Message"
            Text="{Binding AddMessage}"
			FontSize="14"
			Foreground="{Binding AddMessage, Converter={x:Static conv:FuncValueConverters.GetForeground}}"/>

        <!--  Edit Block  -->
        <TextBlock
            Grid.Row="5"
            Grid.ColumnSpan="6"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="16"
            FontWeight="Bold"
            Text="Редактировать параметры FEN" />

        <TextBlock
            Grid.Row="6"
            Grid.Column="0"
            Classes="Header"
            Text="Найти по FEN" />
        <TextBlock
            Grid.Row="6"
            Grid.Column="1"
            Classes="Header"
            Text="Стратегия" />
        <TextBlock
            Grid.Row="6"
            Grid.Column="2"
            Classes="Header"
            Text="Тактика" />
        <TextBlock
            Grid.Row="6"
            Grid.Column="3"
            Classes="Header"
            Text="Счет" />
        <TextBlock
            Grid.Row="6"
            Grid.Column="4"
            Classes="Header"
            Text="Техника" />
        <TextBlock
            Grid.Row="6"
            Grid.Column="5"
            Classes="Header"
            Text="Оценка" />
        <TextBox
            Grid.Row="7"
            Grid.Column="0"
            Watermark="Введи FEN" />
        <ComboBox
			Classes="Combo"
            Grid.Row="7"
            Grid.Column="1"
            SelectedIndex="">
			<ComboBox.Items>1</ComboBox.Items>
            <ComboBox.Items>2</ComboBox.Items>
            <ComboBox.Items>3</ComboBox.Items>
            <ComboBox.Items>4</ComboBox.Items>
            <ComboBox.Items>5</ComboBox.Items>
        </ComboBox>
		<ComboBox
			Classes="Combo"
            Grid.Row="7"
            Grid.Column="2"
            SelectedIndex="-1">
            <ComboBox.Items>1</ComboBox.Items>
            <ComboBox.Items>2</ComboBox.Items>
            <ComboBox.Items>3</ComboBox.Items>
            <ComboBox.Items>4</ComboBox.Items>
            <ComboBox.Items>5</ComboBox.Items>
        </ComboBox>
        <ComboBox
			Classes="Combo"
            Grid.Row="7"
            Grid.Column="3"
            SelectedIndex="-1">
            <ComboBox.Items>1</ComboBox.Items>
            <ComboBox.Items>2</ComboBox.Items>
            <ComboBox.Items>3</ComboBox.Items>
            <ComboBox.Items>4</ComboBox.Items>
            <ComboBox.Items>5</ComboBox.Items>
        </ComboBox>
		<ComboBox
			Classes="Combo"
            Grid.Row="7"
            Grid.Column="4"
            SelectedIndex="-1">
            <ComboBox.Items>1</ComboBox.Items>
            <ComboBox.Items>2</ComboBox.Items>
            <ComboBox.Items>3</ComboBox.Items>
            <ComboBox.Items>4</ComboBox.Items>
            <ComboBox.Items>5</ComboBox.Items>
        </ComboBox>
		<ComboBox
			Classes="Combo"
            Grid.Row="7"
            Grid.Column="5"
            SelectedIndex="-1">
            <ComboBox.Items>1</ComboBox.Items>
            <ComboBox.Items>2</ComboBox.Items>
            <ComboBox.Items>3</ComboBox.Items>
            <ComboBox.Items>4</ComboBox.Items>
            <ComboBox.Items>5</ComboBox.Items>
        </ComboBox>

        <Button
            Grid.Row="8"
            Grid.Column="0"
			Margin="0 10"
            Content="Найти" />

        <StackPanel
            Grid.Row="8"
            Grid.Column="1"
            Orientation="Horizontal">
            <Button
                Grid.Row="9"
                Grid.Column="0"
                Width="165"
                Margin="5,0"
                Content="Сохранить изменения" />
            <Button
                Grid.Row="9"
                Grid.Column="0"
                Width="165"
                Margin="5,0 0 0"
                Content="Удалить FEN" />
        </StackPanel>
    </Grid>
</UserControl>
