<UserControl
    x:Class="Chess.Admin.Views.AddPageView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:Chess.Admin.Converter;assembly=Chess.Admin"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:Chess.Admin.ViewModels;assembly=Chess.Admin"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Design.DataContext>
        <vm:AddPageViewModel />
    </Design.DataContext>

    <Grid
        Margin="10"
        ColumnDefinitions="* 70 70 70 70 70"
        RowDefinitions="50 30 30 30 20 30 30 30 30 30">

        <!--  Add Block  -->
        <TextBlock
            Grid.Row="0"
            Grid.ColumnSpan="6"
            Classes="pageTitle"
            Text="Добавить FEN в базу" />

        <TextBlock
            Grid.Row="1"
            Grid.Column="0"
            Classes="Header"
            Text="FEN" />
        <TextBlock
            Grid.Row="1"
            Grid.Column="1"
            Classes="Header"
            Text="Стратегия" />
        <TextBlock
            Grid.Row="1"
            Grid.Column="2"
            Classes="Header"
            Text="Тактика" />
        <TextBlock
            Grid.Row="1"
            Grid.Column="3"
            Classes="Header"
            Text="Счет" />
        <TextBlock
            Grid.Row="1"
            Grid.Column="4"
            Classes="Header"
            Text="Техника" />
        <TextBlock
            Grid.Row="1"
            Grid.Column="5"
            Classes="Header"
            Text="Оценка" />
        <TextBox
            Grid.Row="2"
            Grid.Column="0"
            Margin="0,0,5,0"
            Text="{Binding Fen}"
            Watermark="Введи FEN" />
        <ComboBox
            Grid.Row="2"
            Grid.Column="1"
            Classes="Combo"
            SelectedIndex="{Binding Strategy}">
            <ComboBox.Items>1</ComboBox.Items>
            <ComboBox.Items>2</ComboBox.Items>
            <ComboBox.Items>3</ComboBox.Items>
            <ComboBox.Items>4</ComboBox.Items>
            <ComboBox.Items>5</ComboBox.Items>
        </ComboBox>
        <ComboBox
            Grid.Row="2"
            Grid.Column="2"
            Classes="Combo"
            SelectedIndex="{Binding Tactics}">
            <ComboBox.Items>1</ComboBox.Items>
            <ComboBox.Items>2</ComboBox.Items>
            <ComboBox.Items>3</ComboBox.Items>
            <ComboBox.Items>4</ComboBox.Items>
            <ComboBox.Items>5</ComboBox.Items>
        </ComboBox>
        <ComboBox
            Grid.Row="2"
            Grid.Column="3"
            Classes="Combo"
            SelectedIndex="{Binding Score}">
            <ComboBox.Items>1</ComboBox.Items>
            <ComboBox.Items>2</ComboBox.Items>
            <ComboBox.Items>3</ComboBox.Items>
            <ComboBox.Items>4</ComboBox.Items>
            <ComboBox.Items>5</ComboBox.Items>
        </ComboBox>
        <ComboBox
            Grid.Row="2"
            Grid.Column="4"
            Classes="Combo"
            SelectedIndex="{Binding Technique}">
            <ComboBox.Items>1</ComboBox.Items>
            <ComboBox.Items>2</ComboBox.Items>
            <ComboBox.Items>3</ComboBox.Items>
            <ComboBox.Items>4</ComboBox.Items>
            <ComboBox.Items>5</ComboBox.Items>
        </ComboBox>
        <ComboBox
            Grid.Row="2"
            Grid.Column="5"
            Classes="Combo"
            SelectedIndex="{Binding Grade}">
            <ComboBox.Items>1</ComboBox.Items>
            <ComboBox.Items>2</ComboBox.Items>
            <ComboBox.Items>3</ComboBox.Items>
            <ComboBox.Items>4</ComboBox.Items>
            <ComboBox.Items>5</ComboBox.Items>
        </ComboBox>

        <StackPanel
            Grid.Row="3"
            Grid.Column="0"
            Orientation="Horizontal">
            <Button
                Classes="click"
                Command="{Binding Add}"
                Content="Добавить" />
            <Button
                Margin="10"
                Classes="click"
                Command="{Binding ClearAdd}"
                Content="Очистить" />
        </StackPanel>

        <TextBlock
            Grid.Row="3"
            Grid.Column="1"
            Grid.ColumnSpan="5"
            Classes="Message"
            Foreground="{Binding AddMessage, Converter={x:Static conv:FuncValueConverters.GetForeground}}"
            Text="{Binding AddMessage}" />

        <!--  Edit Block  -->
        <TextBlock
            Grid.Row="5"
            Grid.ColumnSpan="6"
            Classes="pageTitle"
            Text="Редактировать параметры FEN" />

        <TextBlock
            Grid.Row="6"
            Grid.Column="0"
            Classes="Header"
            Text="Найти по FEN" />
        <TextBlock
            Grid.Row="6"
            Grid.Column="1"
            Classes="Header"
            Text="Стратегия" />
        <TextBlock
            Grid.Row="6"
            Grid.Column="2"
            Classes="Header"
            Text="Тактика" />
        <TextBlock
            Grid.Row="6"
            Grid.Column="3"
            Classes="Header"
            Text="Счет" />
        <TextBlock
            Grid.Row="6"
            Grid.Column="4"
            Classes="Header"
            Text="Техника" />
        <TextBlock
            Grid.Row="6"
            Grid.Column="5"
            Classes="Header"
            Text="Оценка" />
        <TextBox
            Grid.Row="7"
            Grid.Column="0"
            Margin="0,0,5,0"
            Text="{Binding FenEdit}"
            Watermark="Введи FEN" />
        <ComboBox
            Grid.Row="7"
            Grid.Column="1"
            Classes="Combo"
            SelectedIndex="{Binding StrategyEdit}">
            <ComboBox.Items>1</ComboBox.Items>
            <ComboBox.Items>2</ComboBox.Items>
            <ComboBox.Items>3</ComboBox.Items>
            <ComboBox.Items>4</ComboBox.Items>
            <ComboBox.Items>5</ComboBox.Items>
        </ComboBox>
        <ComboBox
            Grid.Row="7"
            Grid.Column="2"
            Classes="Combo"
            SelectedIndex="{Binding TacticsEdit}">
            <ComboBox.Items>1</ComboBox.Items>
            <ComboBox.Items>2</ComboBox.Items>
            <ComboBox.Items>3</ComboBox.Items>
            <ComboBox.Items>4</ComboBox.Items>
            <ComboBox.Items>5</ComboBox.Items>
        </ComboBox>
        <ComboBox
            Grid.Row="7"
            Grid.Column="3"
            Classes="Combo"
            SelectedIndex="{Binding ScoreEdit}">
            <ComboBox.Items>1</ComboBox.Items>
            <ComboBox.Items>2</ComboBox.Items>
            <ComboBox.Items>3</ComboBox.Items>
            <ComboBox.Items>4</ComboBox.Items>
            <ComboBox.Items>5</ComboBox.Items>
        </ComboBox>
        <ComboBox
            Grid.Row="7"
            Grid.Column="4"
            Classes="Combo"
            SelectedIndex="{Binding TechniqueEdit}">
            <ComboBox.Items>1</ComboBox.Items>
            <ComboBox.Items>2</ComboBox.Items>
            <ComboBox.Items>3</ComboBox.Items>
            <ComboBox.Items>4</ComboBox.Items>
            <ComboBox.Items>5</ComboBox.Items>
        </ComboBox>
        <ComboBox
            Grid.Row="7"
            Grid.Column="5"
            Classes="Combo"
            SelectedIndex="{Binding GradeEdit}">
            <ComboBox.Items>1</ComboBox.Items>
            <ComboBox.Items>2</ComboBox.Items>
            <ComboBox.Items>3</ComboBox.Items>
            <ComboBox.Items>4</ComboBox.Items>
            <ComboBox.Items>5</ComboBox.Items>
        </ComboBox>

        <StackPanel
            Grid.Row="8"
            Grid.Column="0"
            Orientation="Horizontal">
            <Button
                Classes="click"
                Command="{Binding Find}"
                Content="Найти" />
            <Button
                Margin="10"
                Classes="click"
                Command="{Binding ClearEdit}"
                Content="Очистить" />
        </StackPanel>

        <StackPanel
            Grid.Row="8"
            Grid.Column="1"
            Orientation="Horizontal">
            <Button
                Grid.Row="9"
                Grid.Column="0"
                Width="165"
                Margin="5,10"
                Classes="click"
                Command="{Binding SaveChanges}"
                Content="Сохранить изменения" />
            <Button
                Grid.Row="9"
                Grid.Column="0"
                Width="165"
                Margin="5,10,0,0"
                Classes="click"
                Command="{Binding DeleteFen}"
                Content="Удалить FEN" />
        </StackPanel>
        <TextBlock
            Grid.Row="9"
            Grid.Column="1"
            Grid.ColumnSpan="5"
            Margin="10"
            Classes="Message"
            Foreground="{Binding EditMessage, Converter={x:Static conv:FuncValueConverters.GetForeground}}"
            Text="{Binding EditMessage}" />

    </Grid>
</UserControl>
